{
  "name": "@harsta/client",
  "version": "0.2.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./wagmi": {
      "type": "./dist/wagmi/index.d.ts",
      "import": "./dist/wagmi/index.js",
      "require": "./dist/wagmi/index.js"
    },
    "./chains": {
      "type": "./dist/chains/index.d.ts",
      "import": "./dist/chains/index.js",
      "require": "./dist/chains/index.js"
    },
    "./contracts": {
      "type": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js",
      "require": "./dist/contracts/index.js"
    },
    "./interfaces": {
      "type": "./dist/interfaces/index.d.ts",
      "import": "./dist/interfaces/index.js",
      "require": "./dist/interfaces/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "esno main.ts",
    "build": "harsta compile --output dist --clean",

    "deploy:devnet": "harsta deploy --verify --network hardhat",

    "deploy:testnet": "harsta deploy --verify --network geneva",
    "deploy:mainnet": "harsta deploy --verify --network moonchain",

    "verify:testnet": "harsta verify --network geneva --target",
    "verify:mainnet": "harsta verify --network moonchain --target",

    "test": "harsta test --network hardhat",
    "test:testnet": "harsta test --network geneva",
    "test:fork:testnet": "harsta test --network hardhat --fork geneva",
    "test:fork:mainnet": "harsta test --network hardhat --fork moonchain"
  },
  "dependencies": {
    "@harsta/client": "workspace:^",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "ethers": "^6.8.1",
    "react": "^18.3.1",
    "viem": "2.x"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/react": "^18.3.3",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.6",
    "harsta": "0.6.5",
    "typescript": "^5.5.3",
    "vitest": "^3.0.5"
  }
}
